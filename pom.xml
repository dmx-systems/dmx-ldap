<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <name>DeepaMehta 4 LDAP</name>
    <artifactId>dm49-ldap</artifactId>
    <version>0.3.7-SNAPSHOT</version>
    <packaging>bundle</packaging>

    <properties>
        <dm4.deploy.dir>../tendu-deepamehta/bundle-deploy</dm4.deploy.dir>
		<dm.version>4.9.1</dm.version>
		<apache.directory.version>2.0.0.AM2</apache.directory.version>
    </properties>
    
    <parent>
        <groupId>de.deepamehta</groupId>
        <artifactId>deepamehta-plugin</artifactId>
        <version>4.9.1</version>
    </parent>

    <dependencies>

		<dependency>
	    	<groupId>org.apache.directory.api</groupId>
	    	<artifactId>api-ldap-client-api</artifactId>
	    	<version>${apache.directory.version}</version>
		</dependency>

	    <dependency>
	    	<groupId>org.apache.directory.api</groupId>
	    	<artifactId>api-ldap-codec-core</artifactId>
	    	<version>${apache.directory.version}</version>
		</dependency>
		
		<dependency>
		    <groupId>org.apache.directory.api</groupId>
		    <artifactId>api-ldap-model</artifactId>
		    <version>${apache.directory.version}</version>
		</dependency>

		<dependency>
		    <groupId>org.apache.directory.api</groupId>
		    <artifactId>api-ldap-codec-standalone</artifactId>
		    <version>${apache.directory.version}</version>
		</dependency>

		<dependency>
		    <groupId>commons-lang</groupId>
		    <artifactId>commons-lang</artifactId>
		    <version>2.6</version>
		</dependency>
		
		<dependency>
		    <groupId>org.springframework.security</groupId>
		    <artifactId>spring-security-crypto</artifactId>
		    <version>5.0.7.RELEASE</version>
		</dependency>

		<dependency>
			<groupId>de.deepamehta</groupId>
			<artifactId>deepamehta-accesscontrol</artifactId>
			<version>${dm.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>de.deepamehta</groupId>
			<artifactId>deepamehta-core</artifactId>
			<version>${dm.version}</version>
			<scope>provided</scope>
		</dependency>

		<!-- explicitly provide implementation to match Apache's requirement -->
		<dependency>
		    <groupId>org.slf4j</groupId>
		    <artifactId>slf4j-jdk14</artifactId>
		    <version>1.7.25</version>
		</dependency>

    </dependencies>

    <build>
        <plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			
        	<plugin>
        		<groupId>net.orfjackal.retrolambda</groupId>
        		<artifactId>retrolambda-maven-plugin</artifactId>
        		<version>2.5.1</version>
        		<executions>
			        <execution>
			            <phase>compile</phase>
			            <goals>
			                <goal>process-main</goal>
			                <goal>process-test</goal>
			            </goals>
			        </execution>
			    </executions>
			    <configuration>
			        <target>1.6</target>
			        <defaultMethods>true</defaultMethods>
			    </configuration>
      		</plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>de.deepamehta.ldap</Bundle-SymbolicName>
                        <Bundle-Activator>de.deepamehta.ldap.LDAPPlugin</Bundle-Activator>
						<Export-Package>de.deepamehta.ldap.service,de.deepamehta.ldap.profile.service</Export-Package>
						<!-- The following package exclusions might be needed if more Apache Directory deps are added.
						 !org.relaxng.datatype*,!org.jaxen*,!org.gjt.xpp,!com.sun.msv.datatype*
						 -->
						<Import-Package>!net.sf.cglib.proxy,!org.bouncycastle*,!org.apache.commons.logging*,*</Import-Package>
						<Embed-Dependency>!stax-api,*;scope=compile|runtime;inline=false</Embed-Dependency>
						<Embed-Directory>dependencies</Embed-Directory>
						<Embed-Transitive>true</Embed-Transitive>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
