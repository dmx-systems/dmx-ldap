<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <name>DeepaMehta 4 LDAP</name>
    <groupId>de.deepamehta</groupId>
    <artifactId>dm49-ldap</artifactId>
    <version>0.3.3-SNAPSHOT</version>
    <packaging>bundle</packaging>

    <properties>
        <!--dm4.deploy.dir>../climbo-ldap-deepamehta/bundle-deploy</dm4.deploy.dir-->
    </properties>

    <parent>
        <groupId>de.deepamehta</groupId>
        <artifactId>deepamehta-plugin</artifactId>
        <version>4.9.1</version>
        <!--relativePath>../dm4-plugin/pom.xml</relativePath-->
    </parent>

    <dependencies>
        <dependency>
            <groupId>de.deepamehta</groupId>
            <artifactId>deepamehta-accesscontrol</artifactId>
            <version>4.9.1</version>
        </dependency>
        
		<dependency>
		    <groupId>org.springframework.security</groupId>
		    <artifactId>spring-security-crypto</artifactId>
		    <version>5.0.7.RELEASE</version>
		</dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>de.deepamehta.ldap</Bundle-SymbolicName>
                        <Bundle-Activator>de.deepamehta.ldap.LDAPPlugin</Bundle-Activator>
			<Import-Package>!org.bouncycastle*,!org.apache.commons.logging*,*</Import-Package>
                        <Embed-Dependency>spring-security-crypto</Embed-Dependency>
			<Embed-Transitive>true</Embed-Transitive>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
